---
type Props = { id: string; ariaLabel?: string };
const { id, ariaLabel = undefined } = Astro.props;
---

<select {id} name={id} aria-label={ariaLabel}><slot /></select>

<style>
	select {
		font-size: 0.8em;
		font-family: var(--font-family);
		margin-left: var(--select-margin-left);
	}
</style>
